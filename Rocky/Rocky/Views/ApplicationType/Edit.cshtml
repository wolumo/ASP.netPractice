@model Rocky.Models.AplicationType;

<form method="post">
    <input asp-for="Id" hidden /> <!--Asociando con aspFor el Id que se manda -->

    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">

            <h2 class="text-info pl-3"> Edit Application Type</h2>
        </div>

        <div class="row">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
           
            <div class="form-group row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-100" value="Update" />


                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success w-100">
                        <i class="fas fa-sign-out-alt"></i>
                        <i class="fa-solid fa-right-from-bracket"></i>
                    </a>

                </div>
            </div>
        </div>




    </div>
    <div class="col-4">
    </div>
    </div>
    </div>

</form>

<!-- Aca para validar desde el lado del servidor-->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}